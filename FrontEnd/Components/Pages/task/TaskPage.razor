@page "/task/{TaskId}"
@using Shared.Task

@inject TaskFetcher Fetcher



<MudContainer Gutters="true" MaxWidth="MaxWidth.Medium">
	<MudCard>
		<MudCardHeader>
			<MudText>Task @TaskId</MudText>
		</MudCardHeader>

		<MudCardContent>
			<MudText>@(_taskData?.Title ?? "Loading...")</MudText>
			<MudText>@(_taskData?.Description ?? "Loading...")</MudText>
		</MudCardContent>
		<MudCardActions>
			<MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
		</MudCardActions>
	</MudCard>
</MudContainer>



